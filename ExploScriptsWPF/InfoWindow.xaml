<Window x:Class="ExploScripts.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExploScripts"
        mc:Ignorable="d"
        Title="ExploScripts - Settings &amp; Info" Height="235.047" Width="302" WindowStartupLocation="CenterOwner">
    <Grid>
        <Button x:Name="btnUninstall" Content="Uninstall" Margin="10,0,10,10" Height="30" VerticalAlignment="Bottom" Click="btnUninstall_Click"/>
        <Label
       Target="{Binding ElementName=textBox1}" Margin="10,10,10,45">
            <TextBlock TextWrapping="WrapWithOverflow">
                Thank you for using ExploScripts!
                <LineBreak />
                At the moment the only thing you can do here is uninstalling ExploScripts... but do you really want that?
                <LineBreak />
                <LineBreak />
                <Hyperlink NavigateUri="https://github.com/TuLux1/ExploScripts" RequestNavigate="OnRequestNavigate">Open the ExploScripts GitHub page!</Hyperlink>
                <LineBreak />
                <LineBreak />
                (c) 2018 Jonas Degenkolb
            </TextBlock>
        </Label>
    </Grid>
</Window>
